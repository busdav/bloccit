 <div class="media">
   <%= render partial: 'votes/voting', locals: { post: post } %>
   <div class="media-body">
    <div class="row">
     <div class="col-md-4">
       <h4 class="media-heading">
         <%= link_to post.title, topic_post_path(post.topic, post) %>
       </h4>
       <small>
         submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %> <br>
         <%= post.comments.count %> Comments
       </small>
     </div>
    <div class="col-md-4">
     <% avatar_url_author = post.user.avatar_url(48) %>
      <% if avatar_url_author %>
        <div class="media-right">
          <%= image_tag avatar_url_author, class: 'media-object' %>
        </div>
      <% end %>
    </div>
   </div>
 </div>